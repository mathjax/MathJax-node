var mjAPI = require("../lib/mj-single.js");

var argv = require("yargs")
  .demand(1).strict()
  .usage("Usage: tex2stree [options] 'math' > file.(json|xml)",{
    min: {
      boolean: true,
      describe: "minimise output"
    },
    json: {
      boolean: true,
      describe: "return semantic tree in Json"
    },
    xml: {
      boolean: true,
      describe: "return semantic tree in XML"
    }
  })
  .argv;

mjAPI.config({});
mjAPI.start();

mjAPI.typeset({
  math: argv._[0],
  format: "TeX",
  semantic: true,
  minSTree: argv.min
}, function (data) {
  if (!data.errors) {
    if (argv.xml) {
      console.log(data.streeXml);}
    if (argv.json) {
      console.log(argv.min ? JSON.stringify(data.streeJson) :
                  JSON.stringify(data.streeJson, null, 2));}
    } else {
      // Throw process exit code to control it on third party applications.
      process.exit(1);
    }
});
